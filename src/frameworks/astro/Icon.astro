---
import { createIcon, type IconArgs, loadNubuiConfig, type NubuiConfig } from '@photosynthesic/nubui';

interface Props extends IconArgs {
  config?: NubuiConfig;
}

const { config, ...iconProps } = Astro.props as Props;

// Load config if provided
if (config) {
  loadNubuiConfig(config);
}

const html = createIcon(iconProps);
---

<Fragment set:html={html} />
